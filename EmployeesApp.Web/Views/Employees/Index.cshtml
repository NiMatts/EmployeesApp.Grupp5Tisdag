@model IndexVM[]

@{
    ViewBag.Title = "Employees List";
}

<ul>
    @foreach (var employee in Model)
    {
        <li>
            <a id="@employee.Id" asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@employee.Name: @employee.Email </a>
    @if (employee.ShowAsHighlighted)
            {
                <script>
                //if(@employee.ShowAsHighlighted) 
                document.getElementById(@employee.Id).style.color = "red";

                </script>
            }
                
                             
                
    
          
        </li>
    }
</ul>
